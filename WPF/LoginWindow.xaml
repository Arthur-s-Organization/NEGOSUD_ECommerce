<Window x:Class="WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion" Height="200" Width="300">
    <Grid>
        <Label Content="Entrer le mot de passe:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="260"/>
        <Button Content="Connexion" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="90,100,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>
