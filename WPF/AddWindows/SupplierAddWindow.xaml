<Window x:Class="WPF.SupplierAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Supplier" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <!-- Nom du fournisseur -->
            <TextBlock Text="Name:" HorizontalAlignment="Center"/>
            <TextBox x:Name="Name" Width="200"/>

            <!-- Description -->
            <TextBlock Text="Description:" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            <TextBox x:Name="Description" Width="200"/>

            <!-- Phone number -->
            <TextBlock Text="Phone number:" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            <TextBox x:Name="PhoneNumber" Width="200"/>

            <!-- Adress -->
            <TextBlock Text="Address:" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            <ComboBox x:Name="AddressComboBox" Width="200" DisplayMemberPath="StreetAddress" SelectedValuePath="AddressId"/>

            <!-- Bouton de sauvegarde -->
            <Button Content="Save" Width="100" Margin="0,20,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
