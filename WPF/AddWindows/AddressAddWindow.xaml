<Window x:Class="WPF.AddressAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter une adresse" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <!-- Street Address -->
            <TextBlock Text="Numéro de rue:" HorizontalAlignment="Center"/>
            <TextBox x:Name="StreetAddress" Width="200"/>

            <!-- ZIP -->
            <TextBlock Text="Code postal:" HorizontalAlignment="Center"/>
            <TextBox x:Name="PostalCode" Width="200"/>

            <!-- City -->
            <TextBlock Text="Ville:" HorizontalAlignment="Center"/>
            <TextBox x:Name="City" Width="200"/>

            <!-- Bouton de sauvegarde -->
            <Button Content="Sauvegarder" Width="100" Margin="0,20,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
